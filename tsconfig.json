{
  "compilerOptions": {
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react-native",
    "isolatedModules": true,
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "./*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["src/components/*"],
      "@contexts/*": ["src/contexts/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@screens/*": ["src/screens/*"],
      "@services/*": ["src/services/*"],
      "@types/*": ["src/types"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "exclude": [
    "node_modules",
    "**/node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
